{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}

<header>
  {{ attach_library('uhsg_theme/menu_toggle') }}
  <div class="l-top-bar">
    <div class="l-top-bar__subregion">
      <div class="l-top-bar__main">
        {% if logo_path and logo_text and home_path %}
          <div class="logo">
            <a href="{{ logo_path }}" class="logo__link"/> 
            <a href="{{ path('<front>') }}" class="logo__homepath">
              <span class="logo__sitename">{{ logo_text }}</span>
            </a>
          </div>
        {% endif %}
        <a href="#" id="menu-toggle" class="nav-toggle"><span></span> {{ 'Menu'|trans }} </a>
      </div>
      <div class="l-top-bar__sub">
        <div class="l-top-bar__subleft">
          {{ elements.headerlinksfi }}
          {{ elements.headerlinksen }}
          {{ elements.headerlinkssv }}
        </div>
        <div class="l-top-bar__subright">
          {{ elements.languageswitcher }}
        </div>
      </div>
    </div>
  </div>
</header>
