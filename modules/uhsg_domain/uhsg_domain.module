<?php

/**
 * @file
 * Contains uhsg_domain.module.
 */

use Drupal\Core\Access\AccessResult;
use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function uhsg_domain_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the uhsg_domain module.
    case 'help.page.uhsg_article':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Provides domain functionality for other modules.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_entity_field_access().
 */
function uhsg_domain_entity_field_access($operation, \Drupal\Core\Field\FieldDefinitionInterface $field_definition, \Drupal\Core\Session\AccountInterface $account, \Drupal\Core\Field\FieldItemListInterface $items = NULL) {

  // Related articles: Deny for other than Instructions for teachers.
  return $field_definition->getName() == 'field_article_related' && !uhsg_domain_is_teacher_domain()
    ? AccessResult::forbidden()
    : AccessResult::neutral();
}

function uhsg_domain_active_domain_id() {
  return \Drupal::service('domain.negotiator')->getActiveId();
}

function uhsg_domain_is_student_domain() {
  return uhsg_domain_active_domain_id() == uhsg_domain_get_student_domain_id();
}

function uhsg_domain_get_student_domain_id() {
  return 'guide_student_helsinki_fi';
}

function uhsg_domain_is_teacher_domain() {
  return uhsg_domain_active_domain_id() == uhsg_domain_get_teacher_domain_id();
}

function uhsg_domain_get_teacher_domain_id() {
  return 'guide_teacher_helsinki_fi';
}

/**
 * Implements hook_entity_presave().
 *
 * Saves article domain based on the selected user group. Teacher domain when
 * the user group is teachers, student domain for other user groups.
 */
function uhsg_domain_entity_presave(Drupal\Core\Entity\EntityInterface $entity) {
  if ($entity instanceof \Drupal\node\Entity\Node && $entity->getType() == 'article') {
    if ($entity->field_user_group->value == 'teachers') {
      $entity->field_article_domain = uhsg_domain_get_teacher_domain_id();
    }
    else {
      $entity->field_article_domain = uhsg_domain_get_student_domain_id();
    }
  }
}
